<!DOCTYPE html>
<html>
  <head>
    <title>OdinKittens</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='bg-light'>
    <nav class='navbar sticky-top bg-secondary p-0'>
      <%= link_to root_path, class: 'navbar-brand p-0' do %>
        <h1 class='title text-warning font-weight-bold mb-0'>
          <%= image_tag 'mehmet.jpg', size: 100 %>
          Odin Kittens
        </h1>
      <% end %>
    </nav>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <div class='container'>
      <div class='card mt-5'>
        <div class='card-header bg-dark'>
          <h1 class='card-title text-light mb-0'>
            <%= yield(:header) %>
            <% unless params[:action] == "index" %>
              <div class='btn-group float-right'>
                <%= link_to 'All kittens', root_path, class: 'btn btn-outline-light btn-sm' %>
                <% if params[:action] == 'edit' || params[:action] == 'show' %>
                  <%= link_to 'Delete', @kitten, method: :delete,
                    data: { confirm: "Are you sure you want to delete this kitten?" }, class: "btn btn-outline-danger btn-sm" %>
                <% end %>
              </div>
            <% end %>
          </h1>
        </div>
        <div class='card-body bg-secondary'>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
